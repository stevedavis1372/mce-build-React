{
  "name": "@tinymce/tinymce-react",
  "version": "2.0.3",
  "description": "Official TinyMCE React Component",
  "repository": {
    "url": "https://github.com/tinymce/tinymce-react"
  },
  "files": [
    "lib",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.txt"
  ],
  "main": "lib/cjs/index.js",
  "module": "lib/es2015/index.js",
  "scripts": {
    "lint": "tslint src/**/*.tsx",
    "clean": "rimraf lib",
    "test": "jest",
    "build": "npm run test && npm run clean && tsc -p ./tsconfig.es2015.json && tsc -p ./tsconfig.cjs.json",
    "watch": "tsc -w -p ./tsconfig.es2015.json",
    "prepare": "npm run build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupFiles": [
      "<rootDir>/test/fakeGlobal.ts"
    ]
  },
  "keywords": [],
  "author": "Ephox Inc",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.19",
    "@types/react-dom": "^16.0.2",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.2.1",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  }
}
